<section id="products">
  <% if title %>
    <h2 class="text-3xl font-bold text-center md:col-span-2"> <%= title %> </h2>
  <% end %>

  <div class="grid grid-cols-2 md:flex md:flex-wrap md:justify-around md:py-5 md:px-20 z-9">
    <% products.each do |product| %>
      <%= render product %>
    <% end %>   
  </div>

</section>

