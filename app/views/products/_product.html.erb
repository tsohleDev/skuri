<div class="w-50 md:w-80 rounded overflow-hidden shadow-lg m-5 transition-transform hover:scale-105 hover:z-0">
  <!-- Product Image -->
  <% if product.image.attached? %>
    <%= link_to product_path(product) do %>
      <%= image_tag product.image, class: "w-full" %>
    <% end %>  
  <% else %>
    <img src="https://via.placeholder.com/300" alt="Placeholder" class="w-full">
  <% end %>

  <div class="py-4 md:px-6 grid grid-cols-3">
    <div class="flex-col col-span-2">
      <h3 class="font-bold text-l"><%= product.name %></h3>
      <p class="text-gray-700 font-bold"><%= number_to_currency(product.price, precision: 2, unit: "R") %></p>
    </div>  

    <div class="pb-2 flex justify-center items-center">
      <p class="text-gray-700 text-xs"><%= product.brand_name %></p>
    </div>
  </div>
</div>

