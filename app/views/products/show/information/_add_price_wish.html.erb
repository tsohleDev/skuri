<div class="flex flex-col-reverse md:flex-row md:items-center md:justify-around md:items-baseline sm:justify-between sm:px-8 py-4 bg-gray-300">
  <!-- Add to Cart Button -->
  <% if @product_stock.first.quantity > 0 %>
    <%= form_tag cart_add_path, method: :post, class: "bg-green-500 w-full md:w-auto my-4 md:my-0 text-center text-white p-0 rounded-md hover:bg-green-600 hover:shadow-md cursor-pointer", data: { turbo_method: :post } do %>
      <%= hidden_field_tag :product_id, @product.id %>
      <%= hidden_field_tag :quantity, 1, data: { shop_target: "cartQuantity" }, required: true %>
      <%= hidden_field_tag :size_id, @selected.size.id, data: { shop_target: "cartSize" }, required: true %>
      <%= hidden_field_tag :colour_id, @selected.colour.id, required: true, id: "cart-colour" %>

      <%= submit_tag "ADD TO CART", class: "px-4 py-2" %>
    <% end %>

    <p class="text-3xl sm:text-xl text-green-500 text-center font-bold w-full md:w-auto sm:mb-4" data-shop-target="price" ><%= number_to_currency(@product.price, precision: 2, unit: "R") %> </p>

  <% else %>
    <p class="text-red-500 font-bold">Out of Stock</p>
  <% end %>

  <!-- Add to Wishlist Button -->
  <%= form_tag wishlist_add_path, method: :post, class: "hidden bg-gray-500 text-white p-0 md:block rounded-md hover:bg-gray-600 hover:shadow-md cursor-pointer", id: "wishlist-form", data: { turbo_method: :post } do %>
    <%= hidden_field_tag :product_id, @product.id %>
    <%= hidden_field_tag :colour_id, @selected.colour.id, required: true, id: "wishlist-colour" %>
    <%= hidden_field_tag :quantity, 1, data: { target: "wishlistQuantity" }, required: true %>
    <%= hidden_field_tag :size_id, @selected.size.id, data: { target: "wishlistSize" }, required: true %>

    <%= submit_tag "ADD TO WISHLIST", class: "px-4 py-2" %>
  <% end %>
</div>
