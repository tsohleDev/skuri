<div class="flex flex-col-reverse md:flex-row md:items-center md:justify-around md:items-baseline sm:justify-between sm:px-8 py-4 bg-gray-300">
  <!-- Add to Cart Button -->
  <% if @product_stock.first.quantity > 0 %>
    <%= form_tag cart_add_path, method: :post, class: "bg-green-500 w-full md:w-auto my-4 md:my-0 text-center text-white px-4 py-2 rounded-md", data: { turbo_method: :post } do %>
      <%= hidden_field_tag :product_id, @product.id %>
      <%= hidden_field_tag :quantity, 1 %>
      <%= hidden_field_tag :size_id, 3 %>
      <%= hidden_field_tag :colour_id, 1 %>

      <%= submit_tag "ADD TO CART" %>
    <% end %>

    <p class="text-3xl text-green-500 text-center font-bold w-full md:w-auto sm:mb-4"><%= number_to_currency(@product.price, precision: 2, unit: "R") %></p>

  <% else %>
    <p class="text-red-500 font-bold">Out of Stock</p>
  <% end %>

  <!-- Add to Wishlist Button -->
  <%= link_to "ADD TO WISHLIST", wishlist_add_path, class: "hidden bg-gray-500 text-white px-2 sm:px-4 md:block py-2 rounded-md", data: { turbo_method: :post } %>
</div>
