<div id='colours-sizes' class="col-span-3 flex flex-col justify-between">
  <!-- Product Colors -->
  <h2 class="text-xl font-bold py-4">Available Colors</h2>

  <div class="flex my-2">
  <% Colour.includes(:product_colour_sizes).where(product_colour_sizes: {id: @product_stock.map(&:id)}).uniq.each do |colour_object| %>
    <button class="w-10 h-10 rounded-full inline-block border-2 border-black mr-2 my-2 hover:shadow-lg hover:shadow-black" style="background-color: <%= colour_object.name.downcase %>"></button>
  <% end %>
  </div>

  <!-- Product Sizes -->
  <h2 class="text-xl font-bold py-4 border-t-2 border-secondary">Available Sizes</h2>

  <div class="flex flex-wrap my-2">
    <% Size.includes(:product_colour_sizes).where(product_colour_sizes: {id: @product_stock.map(&:id)}).uniq.each do |size| %>
      <button class="mr-2 flex justify-center items-center py-2 px-4 my-2 bg-gray-800 text-white rounded-xl hover:shadow-lg hover:shadow-black"><%= size.get_size %></button>
    <% end %>
  </div>
</div>
