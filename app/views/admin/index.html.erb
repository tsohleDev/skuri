<section class="flex min-h-[80vh]">
  <!-- Side Panel -->
  <div class="w-1/4 bg-secondary p-4 rounded-lg mt-2 rounded-l-none shadow-2xl shadow-black md:w-1/5">
    <!-- Profile Information -->
    <div class="mb-4">
      <h2 class="text-lg font-semibold mb-2">Profile Information</h2>
      <p><%= "#{@user.first_name} #{@user.last_name}" %></p>
    </div>

    <!-- Side Panel Links -->
    <div>
      <h2 class="text-lg font-semibold mb-2">Navigation</h2>
      <ul class="list-disc pl-4">
        <li><%= link_to "Summary", admin_path %></li>
        <li><%= link_to "Products", admin_products_path, data: { turbo_method: :post } %></li>
        <li><%= link_to "Orders", admin_orders_path, data: { turbo_method: :post } %></li>
        <li><%= link_to "Messages", admin_messages_path, data: { turbo_method: :post } %></li>
        <li><%= link_to "Logout", destroy_user_session_path, 'data-turbo-method': :delete %></li>
      </ul>
    </div>
  </div>

  <!-- Main Content -->
  <div class="flex-1 p-4"> 
    <%= render 'admin/summary' %>
  </div>
</section>
