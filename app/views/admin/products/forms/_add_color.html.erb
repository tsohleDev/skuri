<div id='product-modal' class='absolute left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-white p-8 rounded-lg shadow-2xl shadow-black w-[50vw]'>
  <div class="w-full flex justify-between items-center">
    <h2 class="text-3xl font-bold text-center">Add Color</h2>
    <button id="close-add-modal" class="text-xl font-bold hover:text-gray-400">&times;</button>
  </div>

  <%= form_tag(create_color_path, data: { turbo_method: :post }) do %>
    <%= hidden_field_tag "product_id", @product.id %>
    
    <div class="w-full flex justify-between items-center">
      <%= label_tag "Color", nil, style: "display: block", class: "font-bold w-full text-center" %>
      <%= text_field_tag "color", nil, class: "w-full", required: true %>

      <%= label_tag "Size", nil, style: "display: block", class: "font-bold w-full text-center" %> 
      <%= text_field_tag "size", nil, class: "w-full", required: true %>

      <%= label_tag "Stock", nil, style: "display: block", class: "font-bold w-full text-center" %>
      <%= number_field_tag "stock", nil, class: "w-full", required: true, min: "0" %>

      <%= label_tag "Price", nil, style: "display: block", class: "font-bold w-full text-center" %>
      <%= number_field_tag "price", nil, class: "w-full", required: true, step: "0.01", min: "0.00" %>
    </div>

    <hr class="my-2 border-2 border-gray-200">

    <div class="w-full flex justify-between items-center">
      <% [1, 2, 3].each do |i| %>
        <div class="flex flex-col items-center">
          <%= label_tag "Image #{i} url", nil, style: "display: block", class: "font-bold w-full text-center" %>
          <%= text_area_tag "images[]", nil, class: "w-full", required: true %>
        </div>
      <% end %>
    </div>

    <div class="w-full flex justify-around mt-4 items-center">
      <%= submit_tag "Add", class: "bg-green-500 text-white p-2 rounded-lg w-1/2 hover:bg-green-400" %>
    </div>
  <% end %>
</div>

<script>
  document.getElementById('close-add-modal').addEventListener('click', function() {
    document.getElementById('product-modal').classList.add('hidden');
  });
</script>