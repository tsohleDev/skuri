<div class="grid grid-cols-7 items-center justify-center mb-4">
  <div class="flex flex-col">
    <%= image_tag item.image_urls.first, class: 'w-32 h-32 object-cover m-5' %>
    <h3 class="text-xl font-bold px-8 text-primary"><%= item.name %></h3>
  </div>

  <div class="flex flex-col justify-center border-r-2 border-gray-300 p-2 h-full">
    <p class="text-lg font-medium"><span class="font-bold">IN STOCK :</span><%= item.stock %></p>
    <p class="text-lg font-medium"><span class="font-bold">BRAND    :</span><%= item.brand_name %></p>
    <p class="text-lg font-medium"><span class="font-bold">CATEGORY :</span><%= item.category_name.join(", ") %></p>
    <p class="text-lg font-medium"><span class="font-bold">AVERAGE RATING :</span><%= item.average_rating %></p>
  </div>

  <div class="flex flex-col justify-center border-r-2 border-gray-300 p-2 h-full col-span-2">
    <% item.colors.each do |color| %>
      <div class="grid grid-cols-6 items-center justify-center" style="border-bottom: 4px solid <%= color.color %>">
        <p class="text-l font-medium border-r-2 border-gray-300"><%= number_to_currency color.price, unit: "R" %></p>
        <p class="text-l font-medium border-r-2 border-gray-300"><%= color.color %></p>
        <p class="text-l font-medium border-r-2 border-gray-300"><%= color.stock %> Stock</p>
        <p class="text-l font-medium col-span-2 border-r-2 border-gray-300"><%= color.materials.map { |material| material.name }.join(", ") %></p>
        <% if color.size %>
          <p class="text-l font-medium"><%= color.size %></p>
        <% else %>
          <p class="text-l font-medium"><%= color.size_uk %>Uk</p>
        <% end %>
      </div>
    <% end %>
  </div>

  <p class="text-lg font-medium px-8 text-primary col-span-2"><%= item.description %></p>

  <div class="flex flex-col items-center justify-center">
    <%= link_to 'Edit', edit_product_path(id: item.id), data: { turbo_method: :post }, class: 'bg-primary text-white px-4 py-2 rounded-md w-40 text-center' %>
    <%= link_to 'Remove', delete_product_path(id: item.id), data: { turbo_method: :delete, confirm: 'Are you sure?'}, class: 'bg-tertiary text-white px-4 py-2 rounded-md w-40 text-center mt-2' %>
  </div>
</div>

<hr class="border-2 border-primary">