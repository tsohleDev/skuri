<div class="grid grid-cols-2 md:grid-cols-7 items-center md:justify-center mb-4">
  <div class="flex flex-col">
    <%= image_tag item.image, class: 'w-32 h-32 object-cover m-5' %>
    <h3 class="text-xl font-bold px-8 text-primary"><%= item.name %></h3>
  </div>

  <div class="flex flex-col justify-center md:border-r-2 border-gray-300 p-2 h-full overflow-hidden">
    <p class="text-lg font-medium"><span class="font-bold">BRAND    :</span><%= item.brand_name %></p>
  </div>

  <div class="flex flex-col justify-center md:border-r-2 border-gray-300 p-2 h-full col-span-2 overflow-hidden">
    <% item.product_colour_sizes.each do |color| %>
      <div class="flex items-center justify-between" style="border-bottom: 4px solid <%= color.colour.name %>">
        <p class="text-l font-medium border-r-2 border-gray-300"><%= number_to_currency color.price, unit: "R" %></p>
        <p class="text-l font-medium border-r-2 border-gray-300"><%= color.colour.name %></p>
        <p class="text-l font-medium border-r-2 border-gray-300"><%= color.quantity %> Stock</p>
        <p class="text-l font-medium"><%= color.size.get_size %></p>
      </div>
    <% end %>
  </div>

  <p class="text-lg text-center font-medium px-8 text-primary col-span-2 md:text-left"><%= item.description %></p>

  <div class="flex md:flex-col items-center justify-center col-span-2 md:col-span-1">
    <%= link_to 'Edit', edit_product_path(id: item.id), data: { turbo_method: :post }, class: 'bg-primary text-white px-4 py-2 rounded-md w-40 text-center' %>
    <%#= link_to 'Add Stock', new_color_path(product_id: item.id), data: { turbo_method: :post }, class: 'bg-secondary text-white px-4 py-2 rounded-md w-40 text-center mt-2' %>
    <%= link_to 'Remove', delete_product_path(id: item.id), data: { turbo_method: :delete, confirm: 'Are you sure?'}, class: 'bg-tertiary text-white px-4 py-2 rounded-md w-40 text-center mt-2' %>
  </div>
</div>

<hr class="border-2 border-primary">

