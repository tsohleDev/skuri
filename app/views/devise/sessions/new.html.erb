<div class="flex flex-col items-center justify-center h-full my-20">
  <h2 class="text-3xl font-bold mb-4">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
    <div class="field my-4 w-full">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "email", required: true, placeholder: "Enter your email", class: "w-full" %>
    </div>

    <div class="field mt-4 w-full">
      <%= f.password_field :password, autocomplete: "current-password", id: "password", required: true, placeholder: "Enter your password", class: "w-full" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mt-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions flex flex-col items-center justify-center mt-4">
      <%= f.submit "Log in", class: "btn btn-primary w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
    </div>

  <div class="flex flex-col items-center justify-center mt-4">
    <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>