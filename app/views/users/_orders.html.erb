<div id="user-content" class="h-full rounded-lg shadow-2xl shadow-black flex flex-col justify-center items-center px-10">
  <h1 class="text-3xl font-bold px-80 mb-20">MY ORDERS</h1>

  <div class="flex flex-col">
    <% @orders.each do |order| %>
      <div class="grid grid-cols-5 gap-4 mb-4">
        <div class="col-span-1 border-b border-gray-200 mb-4 pb-4 bg-white p-4 rounded-lg shadow-lg mr-4 h-full">
          <h2 class="text-xl font-semibold mb-4">Order #<%= order.id %></h2>
          <p class="text-l font-semibold mb-4"><%= order.created_at.to_formatted_s(:long) %></p>
        </div>

        <div class="col-span-4 grid grid-cols-3 gap-8 bg-white p-4 rounded-lg shadow-lg">
          <% order.order_products.each do |item| %>
            <%= render 'users/item', item: item, returnable: false %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

</div>