<div class="sticky top-0 flex bg-quaternary justify-around py-5 border-b-2 border-gray-200 shadow-b shadow-gray-200 items-center h-[5vh] z-10">
  <hr class="border-1 border-gray-500 w-full">
  <% if current_page?(products_path) %>
    <ul class="flex items-center align-middle list-bullet ml-10">
      <!-- Link to Hair Products Category -->
      <li><%= link_to "HAIR", products_path(category: 'hair'), class: "text-gray-500 hover:underline px-2 py-1", 'data-turbo-frame': 'products-frame' %></li>
      <!-- Link to Accessories Category -->
      <li><%= link_to "ACCESSORIES", products_path(category: 'accessories'), class: "text-gray-500 hover:underline px-2 py-1", 'data-turbo-frame': 'products-frame' %></li>

      <!-- Link to Medication Category -->
      <li><%= link_to "MEDICATION", products_path(category: 'medication'), class: "text-gray-500 hover:underline px-2 py-1", 'data-turbo-frame': 'products-frame' %></li>

      <!-- Link to Shoes Category -->
      <li><%= link_to "SHOES", products_path(category: 'shoes'), class: "text-gray-500 hover:underline px-2 py-1", 'data-turbo-frame': 'products-frame' %></li>

      <!-- Search Input -->
      <li><input type="text" placeholder="Search" class="mx-10 px-2 py-1 border rounded"></li>
    </ul>
  <% else %>
    <ul class="flex items-center align-middle list-bullet ml-10">
      <!-- Link to Hair Products Category -->
      <li><%= link_to "HAIR", products_path(category: 'hair'), class: "text-gray-500 hover:underline px-2 py-1"%></li>
      <!-- Link to Accessories Category -->
      <li><%= link_to "ACCESSORIES", products_path(category: 'accessories'), class: "text-gray-500 hover:underline px-2 py-1"%></li>

      <!-- Link to Medication Category -->
      <li><%= link_to "MEDICATION", products_path(category: 'medication'), class: "text-gray-500 hover:underline px-2 py-1"%></li>

      <!-- Link to Shoes Category -->
      <li><%= link_to "SHOES", products_path(category: 'shoes'), class: "text-gray-500 hover:underline px-2 py-1"%></li>

      <!-- Search Input -->
      <li><input type="text" placeholder="Search" class="mx-10 px-2 py-1 border rounded"></li>
    </ul>
  <% end %>
  <hr class="border-1 border-gray-500 w-full">
</div>